generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  name      String
  icon      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  rooms     RoomUser[]
}

model RoomUser {
  users     User     @relation(fields: [userId], references: [id])
  rooms     Room     @relation(fields: [roomId], references: [id])
  userId    String   @db.Uuid
  roomId    String   @db.Uuid
  order     Int
  createdAt DateTime @default(now())
  scores    Score[]

  @@id([userId, roomId])
  @@unique([userId, roomId])
}

model Room {
  id           String     @id @default(uuid()) @db.Uuid
  name         String
  // setting
  initialPoint Int
  returnPoint  Int
  bonusPoint   String
  gameRate     Int
  chipValue    Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now())
  users        RoomUser[]
}

model Score {
  id          String   @id @default(uuid()) @db.Uuid
  gamesNumber Int
  score       Int
  chip        Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  userToRoom RoomUser @relation(fields: [userId, roomId], references: [userId, roomId])
  userId     String   @db.Uuid
  roomId     String   @db.Uuid

  @@index([userId, roomId])
}
