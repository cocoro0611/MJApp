generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  name      String
  icon      String
  createdAt DateTime   @default(now())
  rooms     RoomUser[]
}

model Room {
  id           String     @id @default(uuid()) @db.Uuid
  name         String
  createdAt    DateTime   @default(now())
  users        RoomUser[]
  // setting
  initialPoint Int
  returnPoint  Int
  bonusPoint   String
  Rate         Int
  chipValue    Int
}

model RoomUser {
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.Uuid
  order     Int
  createdAt DateTime @default(now())
  scores    Score[]

  @@id([roomId, userId])
  @@unique([roomId, order]) // roomIdに対してorderが一意であることを保証
}

model Score {
  id        String   @id @default(uuid()) @db.Uuid
  order     Int
  createdAt DateTime @default(now())
  score     Int?
  chip      Int?
  roomUser  RoomUser @relation(fields: [roomId, userId], references: [roomId, userId])
  roomId    String   @db.Uuid
  userId    String   @db.Uuid

  @@index([roomId, userId])
}
